
<Include source = "beam.mesh"/>

<NodeGroup name = "leftCorner">
  lowerEdge & leftEdge
</NodeGroup>

<NodeGroup name = "rightCorner">
  lowerEdge & rightEdge
</NodeGroup>

<NodeConstraints>
  dx[leftCorner]  = 0.0;
  dy[leftCorner]  = 0.0;
  dy[rightCorner] = 0.0;
</NodeConstraints>

<!-- The prescribed displacement, defined as a table. -->

<NodeTable name = "disp">
  <Section columns = "dy">
    loadPoint -0.0002;
  </Section>
</NodeTable>

